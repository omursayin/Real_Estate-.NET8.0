@model CreateBottomGridDto
@{
    ViewData["Title"] = "CreateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Öne Çıkanlar Alanı Ekleme Sayfası</h6>
                <form method="post">
                    <label>İkon</label>
                    <input type="text" asp-for="Icon" class="form-control mb-4" />
                    <label>Başlık</label>
                    <input type="text" asp-for="Title" class="form-control mb-4" />
                    <label>Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control mb-4" />
                    <button class="btn btn-primary">Veriyi Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>